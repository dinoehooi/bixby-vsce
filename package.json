{
  "name": "bixby",
  "displayName": "Bixby",
  "description": "Bixby Language extension",
  "version": "0.0.1",
  "enableProposedApi": true,
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onView:bixbyTrainings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "bixby",
        "aliases": [
          "Bixby",
          "bixby"
        ],
        "extensions": [
          "bxb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bixby",
        "scopeName": "source.bixby",
        "path": "./syntaxes/bixby.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bixby-tools",
          "title": "Bixby Tools",
          "icon": "media/bixby2logo.svg"
        }
      ]
    },
    "views": {
      "bixby-tools": [
        {
          "id": "bixbyTrainings",
          "name": "Training Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "nodeDependencies.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "nodeDependencies.addEntry",
        "title": "Add"
      },
      {
        "command": "nodeDependencies.editEntry",
        "title": "Edit",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "nodeDependencies.deleteEntry",
        "title": "Delete"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nodeDependencies.refreshEntry",
          "when": "view == bixbyTools",
          "group": "navigation"
        },
        {
          "command": "nodeDependencies.addEntry",
          "when": "view == bixbyTools"
        }
      ],
      "view/item/context": [
        {
          "command": "nodeDependencies.editEntry",
          "when": "view == bixbyTools && viewItem == dependency",
          "group": "inline"
        },
        {
          "command": "nodeDependencies.deleteEntry",
          "when": "view == bixbyTools && viewItem == dependency"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "*",
    "tslint": "^5.11.0",
    "typescript": "^2.1.4",
    "vscode": "^1.1.22"
  },
  "dependencies": {
    "walk-sync": "^1.1.3"
  }
}
