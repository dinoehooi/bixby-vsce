{
  "name": "bixby",
  "displayName": "Bixby",
  "description": "Bixby Language extension",
  "version": "0.3.0",
  "publisher": "dinoehooi",
  "enableProposedApi": true,
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onView:bixbyTrainings",
    "workspaceContains:**/*.bxb"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "bixby",
        "aliases": [
          "Bixby",
          "bixby"
        ],
        "extensions": [
          "bxb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bixby",
        "scopeName": "source.bixby",
        "path": "./syntaxes/bixby.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bixby-tools",
          "title": "Bixby Tools",
          "icon": "media/bixby2logo.svg"
        }
      ]
    },
    "views": {
      "bixby-tools": [
        {
          "id": "bixbyTrainings",
          "name": "Training Explorer"
        }
      ]
    },
    "commands": [
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.refresh",
        "title": "Refresh Training Data",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.tag-value",
        "title": "Tag a value"
      },
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.new-training",
        "title": "Add a training"
      },
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.regroup-file",
        "title": "Regroup training files by goal"
      }
    ],
    "keybindings": [
      {
        "command": "bixby.commands.training.tag-value",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "bixby.commands.training.new-training",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "bixby.commands.training.refresh",
          "when": "view == bixbyTrainings",
          "group": "navigation"
        },
        {
          "command": "bixby.commands.training.tag-value",
          "when": "view == bixbyTrainings"
        },
        {
          "command": "bixby.commands.training.regroup-file",
          "when": "view == bixbyTrainings"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "*",
    "tslint": "^5.11.0",
    "typescript": "^2.1.4",
    "vscode": "^1.1.22"
  },
  "dependencies": {
    "@types/jsonpath": "^0.2.0",
    "jsonpath": "^1.0.1",
    "walk-sync": "^1.1.3"
  }
}
