{
  "name": "bixby",
  "displayName": "Bixby",
  "description": "Bixby Language extension",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "url": "https://github.com/dinoehooi/bixby-vsce.git"
  },
  "version": "0.5.2",
  "publisher": "dinoehooi",
  "enableProposedApi": false,
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onView:bixbyTrainings",
    "workspaceContains:**/*.bxb"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "bixby",
        "scopeName": "source.bixby",
        "path": "./syntaxes/bixby.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bixby-tools",
          "title": "Bixby Tools",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "bixby-tools": [
        {
          "id": "bixbyTrainings",
          "name": "Training Explorer"
        }
      ]
    },
    "commands": [
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.refresh",
        "title": "Refresh Training Data",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.tag-value",
        "title": "Tag a value"
      },
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.new-training",
        "title": "Add a training"
      },
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.regroup-file",
        "title": "Regroup training files by goal"
      },
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.check-duplications",
        "title": "Check training duplications"
      },
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.goto",
        "title": "Goto training file"
      },
      {
        "category": "Bixby Tools",
        "command": "bixby.commands.training.search-tagged-value",
        "title": "Search tagged value by type"
      }
    ],
    "keybindings": [
      {
        "command": "bixby.commands.training.tag-value",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "bixby.commands.training.new-training",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "bixby.commands.training.refresh",
          "when": "view == bixbyTrainings",
          "group": "navigation"
        },
        {
          "command": "bixby.commands.training.tag-value",
          "when": "view == bixbyTrainings"
        },
        {
          "command": "bixby.commands.training.regroup-file",
          "when": "view == bixbyTrainings"
        },
        {
          "command": "bixby.commands.training.check-duplications",
          "when": "view == bixbyTrainings"
        },
        {
          "command": "bixby.commands.training.search-tagged-value",
          "when": "view == bixbyTrainings"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install" 
  },
  "devDependencies": {
    "@types/node": "^11.13.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.1",
    "vscode": "^1.1.33",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "@types/jsonpath": "^0.2.0",
    "jsonpath": "^1.0.1",
    "walk-sync": "^1.1.3"
  }
}
